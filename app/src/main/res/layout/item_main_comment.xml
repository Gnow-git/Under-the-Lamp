<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="22dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/commentUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commentUserId"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="12sp"
        android:textColor="@color/commentFont"
        android:letterSpacing="-0.025"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="0dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/commentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commentMessage"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="12sp"
        android:letterSpacing="-0.025"
        android:textColor="@color/commentFont"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commentUserId"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintHorizontal_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>