<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="24dp"
    android:id="@+id/otherChatForm">

    <TextView
        android:id="@+id/chatTime"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="0분전"
        android:textSize="10sp"
        android:textColor="@color/message_time"
        android:fontFamily="@font/pretendard_regular"
        android:letterSpacing="-0.05"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/chatContent"
        app:layout_constraintStart_toEndOf="@+id/chatContent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/chatContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:text="이번에 함께 작업할 수 있어서 좋았어요 :)\n다음에 기회가 된다면 또 같이 작업해요!"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="14sp"
        android:letterSpacing="-0.05"
        android:textColor="@color/message_color"
        android:paddingTop="13dp"
        android:paddingBottom="12dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@drawable/chat_other_background"/>




</androidx.constraintlayout.widget.ConstraintLayout>