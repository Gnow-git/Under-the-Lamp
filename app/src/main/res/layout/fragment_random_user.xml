<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="691dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/communityTitle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="함께 작업할\n다양한 예술인을 만나보세요"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/community_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:text="다양한 예술인을 랜덤으로 만나보세요!"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/fontColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/communityTitle"
        android:layout_marginTop="1dp"
        android:layout_marginStart="28dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/randomUserFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/community_sub_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/userPostImage"
            android:layout_width="310dp"
            android:layout_height="460dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/layout_round"
            android:src="@drawable/random_user_default"
            android:scaleType="centerCrop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userTotalForm"
            android:layout_width="310dp"
            android:layout_height="184dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/userProfileForm"
                android:layout_width="310dp"
                android:layout_height="155dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:background="@drawable/user_profile_form_background">
                
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="160dp"
                    android:layout_height="25dp"
                    android:text="아자자"
                    android:textSize="24sp"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/splashBackground"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="28dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"    />

                <TextView
                    android:id="@+id/userText"
                    android:layout_width="125dp"
                    android:layout_height="18dp"
                    android:text="아자자! 화이팅"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/splashBackground"
                    app:layout_constraintTop_toBottomOf="@+id/userName"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"    />

                <TextView
                    android:id="@+id/userCategory"
                    android:layout_width="125dp"
                    android:layout_height="18dp"
                    android:text="#영상 #음악"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/fontColor"
                    app:layout_constraintTop_toBottomOf="@+id/userText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="27dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"    />

                <ImageView
                    android:id="@+id/userPick"
                    android:layout_width="23.61dp"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/pick_user_icon"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="256dp"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintHorizontal_bias="0.0"  />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/user_profile_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="109dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintHorizontal_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/dice_icon"
        app:layout_constraintTop_toBottomOf="@+id/randomUserFrame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="35dp" />



</androidx.constraintlayout.widget.ConstraintLayout>