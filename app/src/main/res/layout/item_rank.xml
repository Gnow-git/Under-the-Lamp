<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="196dp"
    android:layout_height="305dp"
    android:layout_gravity="center"
    android:layout_marginRight="6dp"
    android:background="@drawable/layout_shadow">

    <ImageView
        android:id="@+id/rankImage"
        android:layout_width="190dp"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rank_image_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rankForm"
        android:layout_width="190dp"
        android:layout_height="120dp"
        android:background="@drawable/rank_form_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/rankTitle"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/pretendard_semibold"
            android:maxLines="2"
            android:text="ì§€ê¸ˆ ê°€ìž¥ í•«í•œðŸ”¥\nê³µëª¨ì „ Top 10"
            android:textColor="@color/splashBackground"
            android:textSize="18sp"
            android:letterSpacing="-0.05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/rankLikeCount"
            android:layout_width="110dp"
            android:layout_height="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="Like 8,430"
            android:textColor="@color/fontColor"
            android:textSize="11sp"
            android:letterSpacing="-0.05"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rankTitle"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/enterBtn"
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:layout_marginStart="153dp"
            android:layout_marginTop="72dp"
            android:src="@drawable/pick_user_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>